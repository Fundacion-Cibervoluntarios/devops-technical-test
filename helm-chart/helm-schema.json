{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "E-commerce App Helm Chart Values",
  "description": "Schema for validating values.yaml",
  "type": "object",
  "required": ["global", "images"],
  "properties": {
    "global": {
      "type": "object",
      "required": ["environment", "imageRegistry"],
      "properties": {
        "environment": {
          "type": "string",
          "enum": ["dev", "staging", "prod"],
          "description": "Environment name"
        },
        "imageRegistry": {
          "type": "string",
          "pattern": "^[a-z0-9]+\\.azurecr\\.io$",
          "description": "Azure Container Registry URL"
        },
        "domain": {
          "type": "string",
          "pattern": "^[a-z0-9]+(\\.[a-z0-9]+)*$",
          "description": "Application domain"
        },
        "azure": {
          "type": "object",
          "properties": {
            "tenantId": {
              "type": "string",
              "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$"
            },
            "subscriptionId": {
              "type": "string",
              "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$"
            },
            "resourceGroup": {
              "type": "string",
              "pattern": "^rg-[a-z0-9-]+$"
            },
            "keyVaultName": {
              "type": "string",
              "pattern": "^kv-[a-z0-9-]+$",
              "maxLength": 24
            }
          }
        }
      }
    },
    "images": {
      "type": "object",
      "required": ["frontend", "backend"],
      "properties": {
        "frontend": {
          "type": "object",
          "required": ["repository", "tag"],
          "properties": {
            "repository": {
              "type": "string",
              "pattern": "^[a-z0-9-]+$"
            },
            "tag": {
              "type": "string",
              "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$|^latest$"
            },
            "pullPolicy": {
              "type": "string",
              "enum": ["Always", "IfNotPresent", "Never"]
            }
          }
        },
        "backend": {
          "type": "object",
          "required": ["repository", "tag"],
          "properties": {
            "repository": {
              "type": "string",
              "pattern": "^[a-z0-9-]+$"
            },
            "tag": {
              "type": "string",
              "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$|^latest$"
            },
            "pullPolicy": {
              "type": "string",
              "enum": ["Always", "IfNotPresent", "Never"]
            }
          }
        }
      }
    },
    "frontend": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "replicaCount": {
          "type": "integer",
          "minimum": 1,
          "maximum": 50
        },
        "resources": {
          "type": "object",
          "properties": {
            "requests": {
              "type": "object",
              "properties": {
                "cpu": {
                  "type": "string",
                  "pattern": "^[0-9]+m?$"
                },
                "memory": {
                  "type": "string",
                  "pattern": "^[0-9]+(Mi|Gi)$"
                }
              }
            },
            "limits": {
              "type": "object",
              "properties": {
                "cpu": {
                  "type": "string",
                  "pattern": "^[0-9]+m?$"
                },
                "memory": {
                  "type": "string",
                  "pattern": "^[0-9]+(Mi|Gi)$"
                }
              }
            }
          }
        },
        "autoscaling": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "minReplicas": {
              "type": "integer",
              "minimum": 1
            },
            "maxReplicas": {
              "type": "integer",
              "minimum": 2,
              "maximum": 100
            },
            "targetCPUUtilizationPercentage": {
              "type": "integer",
              "minimum": 10,
              "maximum": 100
            }
          }
        }
      }
    },
    "backend": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "replicaCount": {
          "type": "integer",
          "minimum": 1,
          "maximum": 50
        },
        "resources": {
          "$ref": "#/properties/frontend/properties/resources"
        },
        "autoscaling": {
          "$ref": "#/properties/frontend/properties/autoscaling"
        }
      }
    },
    "redis": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "persistence": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "storageClass": {
              "type": "string"
            },
            "size": {
              "type": "string",
              "pattern": "^[0-9]+(Mi|Gi)$"
            }
          }
        }
      }
    },
    "ingress": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "className": {
          "type": "string",
          "enum": ["azure-application-gateway", "nginx", "traefik"]
        },
        "hosts": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["host", "paths"],
            "properties": {
              "host": {
                "type": "string",
                "pattern": "^[a-z0-9]+(\\.[a-z0-9]+)*$"
              },
              "paths": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["path", "pathType"],
                  "properties": {
                    "path": {
                      "type": "string",
                      "pattern": "^\\/.*$"
                    },
                    "pathType": {
                      "type": "string",
                      "enum": ["Exact", "Prefix", "ImplementationSpecific"]
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "database": {
      "type": "object",
      "required": ["host", "port", "name", "username"],
      "properties": {
        "host": {
          "type": "string"
        },
        "port": {
          "type": "integer",
          "minimum": 1,
          "maximum": 65535
        },
        "name": {
          "type": "string",
          "pattern": "^[a-z0-9_]+$"
        },
        "username": {
          "type": "string",
          "pattern": "^[a-z0-9_]+$"
        },
        "sslMode": {
          "type": "string",
          "enum": ["disable", "allow", "prefer", "require", "verify-ca", "verify-full"]
        }
      }
    },
    "monitoring": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        }
      }
    },
    "securityContext": {
      "type": "object",
      "properties": {
        "runAsNonRoot": {
          "type": "boolean"
        },
        "runAsUser": {
          "type": "integer",
          "minimum": 1000
        },
        "readOnlyRootFilesystem": {
          "type": "boolean"
        }
      }
    },
    "nodeSelector": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "tolerations": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "key": {
            "type": "string"
          },
          "operator": {
            "type": "string",
            "enum": ["Equal", "Exists"]
          },
          "value": {
            "type": "string"
          },
          "effect": {
            "type": "string",
            "enum": ["NoSchedule", "PreferNoSchedule", "NoExecute"]
          }
        }
      }
    }
  }
}